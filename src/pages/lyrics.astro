---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import LyricComponent from '../components/LyricComponent.astro';

export const prerender = true;

const lyrics = await getCollection('lyric')
---
<Layout title="lyrics" description="download free stems by kid soma">
	<main>
		<div class="h-screen pr-12 pl-12">
			<h1 class="text-3xl pl-24 pt-12 font-extrabold">lyrics</h1>
            <div class="pt-8 pb-8">our beautiful beautiful lyrics.</div>
            <div class="pl-8 pr-8">
                {lyrics.map((lyric) => <LyricComponent lyric={lyric.data}/>)}
            </div>
		</div>
	</main>
</Layout>