---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import StemComponent from '../components/StemComponent.astro';

export const prerender = true;

const stems = await getCollection('stem')
---
<Layout title="stems" description="download free stems by kid soma">
	<main>
		<div class="h-screen pr-12 pl-12">
			<h1 class="text-3xl pl-24 pt-12 font-extrabold">stems</h1>
            <div class="pt-8 pb-8">take our stems and farm them for samples, make remixes, do whatever you like and send us what you make!</div>
            <div class="pl-8 pr-8">
                {stems.map((stem) => <StemComponent stem={stem.data}/>)}
            </div>
		</div>
	</main>
</Layout>
