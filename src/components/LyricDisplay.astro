---
import type { TLyric } from "./LyricComponent.astro";

export interface Props {
    lyric: TLyric
}

const {lyric} = Astro.props
console.log(lyric)
---
<div class="modal-wrapper">
    <div class="modal">
        <div class="modal-header">
        <h2>{lyric.song}</h2>
        <button class="close-btn">&times;</button>
        </div>
        <div class="modal-body">
        <!-- <p>{lyric.lyrics}</p> -->
        <slot />
        </div>
    </div>
</div>

<style>
    .modal-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    visibility: hidden;
    }

    .modal {
    background-color: white;
    width: 50%;
    height: 50%;
    border-radius: 10px;
    box-shadow: 0px 0px 10px #000000;
    overflow-y: auto;
    }

    .modal-header {
    display: flex;
    justify-content: space-between;
    padding: 10px;
    border-bottom: 1px solid #cccccc;
    }

    .modal-body {
    padding: 10px;
    height: calc(100% - 60px);
    }

    .close-btn {
    font-size: 18px;
    font-weight: bold;
    cursor: pointer;
    }
</style>